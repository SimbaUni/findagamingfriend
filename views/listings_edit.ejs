<%- include('partials/header') %>


<div class="row">
  <div class="col-6 m-auto">
    <h1>Edit Listing</h1>

    <form action="/listings/<%=listing._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= listing.title %> " class="form-control" />
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" class="form-control" value="<%= listing.description %>" />
      </div>

      <div class="form-group">
        <label for="datePosted">Date</label>
        <input type="date" name="date" class="form-control" value="<%= listing.date.toISOString().split('T')[0] %>" />
      </div>

      <div class="form-group">
        <label for="genre">Genre</label>
        <select name="genre" id="genre" class="form-control">
          <option value="" disabled>~Choose Below~</option>
          <option <%= listing.genre==='Adventure'?'selected':'' %>>Adventure</option>
            <option <%= listing.genre==='Card & Board Game'?'selected':'' %>>Card & Board Game</option>
            <option <%= listing.genre==='Fighting'?'selected':'' %>>Fighting</option>
            <option <%= listing.genre==='Indie'?'selected':'' %>>Indie</option>
            <option <%= listing.genre==='MOBA'?'selected':'' %>MOBA</option>
            <option <%= listing.genre==='Platform'?'selected':'' %>>Platform</option>
            <option <%= listing.genre==='Racing'?'selected':'' %>>Racing</option>
            <option <%= listing.genre==='Real Time Strategy (RTS)'?'selected':'' %>>Real Time Strategy (RTS)</option>
            <option <%= listing.genre==='Role-playing (RPG)'?'selected':'' %>>Role-playing (RPG)</option>
            <option <%= listing.genre==='Shooter'?'selected':'' %>>Shooter</option>
            <option <%= listing.genre==='Simulator'?'selected':'' %>>Simulator</option>
            <option <%= listing.genre==='Sport'?'selected':'' %>>Sport</option>
            <option <%= listing.genre==='Strategy'?'selected':'' %>>Strategy</option>
        </select>
      </div>  

      <div class="form-group">
        <label for="gameSelected">Game</label>
        <select name="gameSelected" id="gameSelected" class="form-control">
          <option value=""  disabled>~Choose Below~</option>
          <option <%= listing.gameSelected==='League of Legends'?'selected':'' %>>League of Legends</option>
             <option <%= listing.gameSelected==='Destiny 2'?'selected':'' %>>Destiny 2</option>
             <option <%= listing.gameSelected==='Pokemon go'?'selected':'' %>>Pokemon go</option>
             <option <%= listing.gameSelected==='World of Warcraft'?'selected':'' %>>World of Warcraft</option>
             <option <%= listing.gameSelected==='Dota 2'?'selected':'' %>>Dota 2</option>
        </select>
      </div>

      <div class="form-group">
        <label for="lookingFor">Amount of people I am looking for</label>
        <input type="number" name="lookingFor" class="form-control" value="<%= listing.lookingFor %>" />
      </div>

      <div class="form-group">
        <label for="region">Region</label>
        <select name="region" id="region" class="form-control">
          <option disabled>~Choose Below~</option>
          <option <%= listing.region === 'Europe' ? 'selected' : '' %>>Europe</option>
             <option <%= listing.region === 'North America' ? 'selected' : '' %>>North America</option> 
        </select>
      </div>

      <div class="form-group">
        <label for="timezone">Timezone</label>
        <select name="timezone" id="timezone" class="form-control">
          <option value=""  disabled>~Choose Below~</option>
          <option <%= listing.timezone==='GMT -9'?'selected':'' %>>GMT -9</option>
             <option <%= listing.timezone === 'GMT -8' ? 'selected' : ''  %>>GMT -8</option>
             <option <%= listing.timezone==='GMT -7'?'selected':'' %>>GMT -7</option>
             <option <%= listing.timezone==='GMT -6'?'selected':'' %>>GMT -6</option>
             <option <%= listing.timezone==='GMT -5'?'selected':'' %>>GMT -5</option>
             <option <%= listing.timezone==='GMT -4'?'selected':'' %>>GMT -4</option>
             <option <%= listing.timezone==='GMT +0'?'selected':'' %>>GMT +0</option>
             <option <%= listing.timezone==='GMT +1'?'selected':'' %>>GMT +1</option>
             <option <%= listing.timezone==='GMT +2'?'selected':'' %>>GMT +2</option>
             <option <%= listing.timezone==='GMT +3'?'selected':'' %>>GMT +3</option>
        </select>
      </div>

      <button type="submit" class="btn btn-danger float-right">Update</button>

    </form>
  </div>
</div>




<%- include('partials/footer') %> 