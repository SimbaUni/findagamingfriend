<%- include('partials/header.ejs') %>

<div class="container"style="background-color: rgb(255, 255, 255); padding: 2.5rem;">
  <h1>All available Listings</h1>
  <form
        class="form-inline float-sm-right my-lg-0"
        action="/listings/search"
        method="GET"
      >
        <input
          class="form-control mr-sm-2"
          type="search"
          name="term"
          placeholder="Search"
          aria-label="Search"
        />
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
          Search
        </button>
      </form> 
  <br />
  <p>
    Welcome
    <b class="text-success text-capitalize"
      ><% if (user) { %> <%= user.username %> <% } %></b
    >
    
    
  </p>
  <hr />
  
  
  <div class="card-columns">
    <!-- start of card -->
    <% listings.forEach(listing=>{%>
   <% if (listing.platform==='PC') { %> <%=listings.platform %> 
        <div class="card" style="border-radius: 5%; background-image: url(https://i.ibb.co/1RcBWtP/Pc-icon.png);
        background-repeat: no-repeat;
      background-position: top right;
      background-size: 50px;">
          <div class="card-body ">
            <h4 class="card-title" style="min-height: 3rem; max-height: 3rem; max-width:90%"><%= listing.title %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= listing.gameSelected %></h6>
            <p class="card-text" style="min-height: 4rem; max-height: 4rem; overflow: hidden;"><%= listing.description %></p>
            <p class="card-text mb-2 text-muted">See more</p>
            <a href="/listings/<%= listing._id %> " class="stretched-link"></a>
          </div>
        </div>
        <% } %>
        <% if (listing.platform==='Xbox') { %> <%=listings.platform %> 
          <div class="card" style="border-radius: 5%; background-image: url(https://i.ibb.co/FzgC2S7/Xbox-icon.png);
          background-repeat: no-repeat;
        background-position: top right;
        background-size: 50px;">
            <div class="card-body ">
              <h4 class="card-title" style="min-height: 3rem; max-height: 3rem; max-width:90%"><%= listing.title %></h4>
              <h6 class="card-subtitle mb-2 text-muted"><%= listing.gameSelected %></h6>
              <p class="card-text" style="min-height: 4rem; max-height: 4rem; overflow: hidden;"><%= listing.description %></p>
              <p class="card-text mb-2 text-muted">See more</p>
              <a href="/listings/<%= listing._id %> " class="stretched-link"></a>
            </div>
          </div>
  
  
          <% } %>
          <% if (listing.platform==='Playstation') { %> <%=listings.platform %> 
            <div class="card" style="border-radius: 5%; background-image: url(https://i.ibb.co/X8N8rKb/Playstation-icon.png);
            background-repeat: no-repeat;
          background-position: top right;
          background-size: 50px;">
              <div class="card-body ">
                <h4 class="card-title" style="min-height: 3rem; max-height: 3rem; max-width:90%"><%= listing.title %></h4>
                <h6 class="card-subtitle mb-2 text-muted"><%= listing.gameSelected %></h6>
                <p class="card-text" style="min-height: 4rem; max-height: 4rem; overflow: hidden;"><%= listing.description %></p>
                <p class="card-text mb-2 text-muted">See more</p>
                <a href="/listings/<%= listing._id %> " class="stretched-link"></a>
              </div>
            </div>
    
    
            <% } %>
            <% if (listing.platform==='Mobile') { %> <%=listings.platform %> 
              <div class="card" style="border-radius: 5%; background-image: url(https://i.ibb.co/YN9tPzP/Mobile-icon.png);
              background-repeat: no-repeat;
            background-position: top right;
            background-size: 50px;">
                <div class="card-body ">
                  <h4 class="card-title" style="min-height: 3rem; max-height: 3rem; max-width:90%"><%= listing.title %></h4>
                  <h6 class="card-subtitle mb-2 text-muted"><%= listing.gameSelected %></h6>
                  <p class="card-text" style="min-height: 4rem; max-height: 4rem; overflow: hidden;"><%= listing.description %></p>
                  <p class="card-text mb-2 text-muted">See more</p>
                  <a href="/listings/<%= listing._id %> " class="stretched-link"></a>
                </div>
              </div>
      
      
              <% } %>
      
    <% }) %>

    <!-- end of card -->
  </div>
</div>

<%- include('partials/footer.ejs') %>
