<%- include('partials/header') %>


<div class="container">
  <div class="col-auto">
    <h1>Message User
    </h1>

    <form action="/profile/message" method="POST">
        <div class="form-group">
            <label for="recipient">Message to: <%= profile.username.charAt(0).toUpperCase() + profile.username.slice(1) %></label>
            <input type="hidden" name="recipient" class="form-control" value="<%= profile._id %>">
          </div>
          <div class="form-group">
            <input type="hidden" name="sender" class="form-control" value="<%= user._id %>"/>
          </div>
         

      <div class="form-group">
        <label for="text">Message (Maximum 300 Words)</label>
        <textarea class="form-control" name="text" rows="3" value=""></textarea>
      </div>
    
      <button type="submit" class="btn btn-danger" style="float: right;">Send</button>

    </form>
    
  </div>
</div>




<%- include('partials/footer') %> 