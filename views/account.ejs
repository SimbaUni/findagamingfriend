<%- include('partials/header') %>


<div class="container"style="background-color: rgb(255, 255, 255); padding: 2.5rem;">
  <div class="col-auto">
    <h1>Edit Profile</h1>

    <form action="/profile/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="pronouns">Pronouns</label>
        <input type="text" name="pronouns" value="<%= users.pronouns %>" class="form-control" />
      </div>

      <div class="form-group">
        <label for="bio">Bio (Maximum 300 Words)</label>
        <textarea class="form-control" name="bio" rows="3" value="<%= users.bio %>"><%= users.bio %></textarea>
      </div>
    
      <div class="form-group">
        <label for="avatar">Change avatar?</label><br>
        <img src="<%= users.avatar %>" alt="??" name="current" class="img-fluid" style="max-height: 150px; max-width: 150px;" /><br><br>
        <input type='file' class="form-control-file" name='image' value="<%= users.avatar %>" />
      </div>

      <button type="submit" class="btn btn-danger" style="float: right;">Update</button>

    </form>
    
  </div>
</div>




<%- include('partials/footer') %> 